    }
    else
    {
    <!-- Application Insights is not configured - using placeholder connection string -->
    <script type="text/javascript">
        console.log('Application Insights is not configured. Update appsettings.json with valid connection string to enable telemetry.');
        // Initialize minimal window.appInsights object to prevent JavaScript errors
        window.appInsights = {
            trackEvent: function(name, properties) { console.log('AI Event (demo mode):', name, properties); },
            trackPageView: function(properties) { console.log('AI Page View (demo mode):', properties); },
            trackException: function(exception, properties) { console.log('AI Exception (demo mode):', exception, properties); },
            trackTrace: function(message, properties) { console.log('AI Trace (demo mode):', message, properties); },
